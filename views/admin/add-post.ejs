<div class="admin-title">
  <h2>Add New Post</h2>
  <a href="/dashboard" class="btn">&larr; Back</a>
</div>

<form action="/add-post" method="POST">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title">

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"></textarea>

  <input type="file" name="imgfile" accept="image/jpeg" id="imgFile">
  <!-- <div class="" id="images"></div> -->
  <input type="submit" id="submitButton" value="Add" class="btn">

  <script src="../submit.js"></script>
  
</form>